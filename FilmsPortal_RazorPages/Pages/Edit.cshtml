@page
@model FilmsPortal_RazorPages.Pages.EditModel
@{
}
<div class="changes">
    <div class="row col-" style=" display: flex; ">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="Id" />
                <input type="hidden" name="Poster" />
                <div class="form-group">
                    <label class="control-label">Название</label>
                    <input name="Name" class="form-control" value="@Model.Name" required />
                    <span name="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label name="Description" class="control-label">Описание</label>
                    <input name="Description" class="form-control" value="@Model.Description" required />
                    <span name="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label name="Jenre" class="control-label">Жанр</label>
                    <input name="Jenre" class="form-control" value="@Model.Jenre" required />
                    <span name="Jenre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label name="Year" class="control-label">Год</label>
                    <input name="Year" class="form-control" value="@Model.Year" required />
                    <span aname="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label name="Producer" class="control-label">Режисер</label>
                    <input name="Producer" class="form-control" value="@Model.Producer" required />
                    <span name="Producer" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label class="control-label">Постер</label>
                    <input class="form-control" type="file" name="uploadedFile" value="@Model.uploadedFile" />
                    <br />
                    <input name="Poster" class="form-control" type="submit" value="Загрузить" />
                </div>
                <div>
                    <a name="Index" style="text-decoration:none ; color: black">Вернуться на главную</a>
                </div>
                <input type="submit" value="Загрузить" />
            </form>
        </div>
        <img src="@Model.film?.Poster" style="max-width: 650px; max-height:auto" />
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}